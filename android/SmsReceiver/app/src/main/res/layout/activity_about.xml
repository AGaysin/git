<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo_big"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Версия программы 1.0 "
            android:id="@+id/textViewAbout"
            android:layout_margin="10dp"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/gray_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="(Март 2016)"
            android:id="@+id/textView2"
            android:layout_margin="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Разработка, произвоство и поставка систем телеметрии и охраны.\nПродажа оборудования для систем безопасности."
        android:id="@+id/textView3"
        android:layout_margin="10dp"
        android:textSize="14sp" />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Разработчик\nГайсин Азамат \nООО &quot;Техохрана&quot; \nwww.tehohrana.ru"
        android:id="@+id/textView5"
        android:layout_margin="10dp"
        android:textSize="14sp" />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Дизайнер\nМазурский Юрий \nwww.colomolome.com"
        android:id="@+id/textView6"
        android:layout_margin="10dp"
        android:textSize="14sp" />

</LinearLayout>